<%- include('../includes/head.ejs') %>

<link rel="stylesheet" type="text/css" href="/css/css.css">
  </head>

  <body>
    <main>
      <!-- Sign in form -->
      <div class="page auth_form" id="login_form">
        <div class="card">
          <div class="card__head">
            <p class="title">Login Form</p>
          </div>

          <form class="card__body" action="/auth/signin" method="post">
            <div class="form-controll">
              <input class="card__body-input" type="text" name="login_username" id="login_username"
                placeholder="Email or Phone" />
              <span class="error none" id="login_username_error">
                <i class="fa-duotone fa-exclamation"></i>
                Please enter a valid mail
              </span>
            </div>

            <div class="form-controll">
              <div class="password__input-show_hide">
                <input class="card__body-input" type="password" name="login_password" id="login_password"
                  placeholder="Password" />
                <i class="password-show_hide-icon fa-solid fa-eye" id="login_password_icon"></i>
              </div>
              <span class="error none" id="login_password_error">
                <i class="fa-duotone fa-exclamation"></i>
                Please enter 8 characters with number, capital and small letter
              </span>
            </div>

            <a class="card__body-link">Forgot password?</a>

            <button t ype="button" class="card__body-btn disable" name="login_submit" id="login_submit"
              >Login</button>
          </form>

          <div class="card__footer">
            <p class="text">Not a member ?</p>
            <a class="card__footer-link" href="/auth/signup" id="sign_up_link">Sign Up now</a>
          </div>
        </div>
      </div>
    </main>
  </body>
  <script src="/js/login.js"></script>

  </html>