<%- include('../../includes/head.ejs') %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/table-button.css">
  <%- include('../../includes/admin_nav.ejs') %>

    <div class="container body">
      <table class="table table-hover">
        <thead class="thead thead-dark" style="background-color: #acb2c7">
          <tr>
            <th >ID</th>
            <th >User Name</th>
            <th >Role</th>
            <th >Full Name</th>
            <th >Mobile</th>
            <th>Tasks</th>
            <th>Status</th>
            <th>Created At</th>
            <th scope="col">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <% for(let account of accounts){ %>
            <tr>
              <th scope="row">
                <%= account.id %>
              </th>
              <td>
                <a href="/admin/todolist/<%= account.id %>">
                  <%= account.username %>
                </a>
              </td>
              <td>
                <%= account.role.name %>
              </td>
              <td>
                <% if(account.info_account){ %>
                  <%= account.info_account.full_name %>
                <% } else { %>
                  NULL
                <% } %>
              </td>
              <td>
                <% if(account.info_account){ %>
                  <%= account.info_account.mobile %>
                <% } else { %>
                  NULL
                <% } %>
              </td>
              <td>
                <%= account.tasks.length %>
              </td>
              <td>
                <% if(account.status==0){ %>
                  Disabled
                  <% } else{ %>
                    Active
                    <% } %>
              </td>
              <td>
                <%= account.createdAt.toUTCString() %>
              </td>
              <td>
                <button class="table-button__delete">
                  <i class="fa-solid fa-user-slash"></i>
                  Delete
                </button>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>