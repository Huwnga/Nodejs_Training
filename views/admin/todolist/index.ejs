<%- include('../../includes/head.ejs') %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <style>
    body {
      margin-bottom: 5rem;
    }
  </style>
  <%- include('../../includes/admin_nav.ejs') %>
    <div class="container">
      <button class="table-button__add">
        <i class="fa-solid fa-plus"></i>
        Create
      </button>
      <h1 class="display-4">Student's Name: <%= account.info_account.full_name %></h1>
      <table class="table table-hover">
        <thead class="thead thead-dark" style="background-color: #acb2c7">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Tasks</th>
            <th scope="col">Status</th>
            <th scope="col">Created At</th>
            <th scope="col">Updated At</th>
            <!-- <th scope="col">&nbsp;</th>
        <th scope="col">&nbsp;</th>
        <th scope="col">&nbsp;</th> -->
          </tr>
        </thead>
        <tbody>
          <% for(let task of account.tasks){ %>
            <tr>
              <th scope="row">
                <%= task.id %>
              </th>

              <td>
                <%= task.name %>
              </td>

              <td>
                <%= task.status %>
              </td>

              <td>
                <%= task.createdAt.toUTCString() %>
              </td>

              <td>
                <%= task.updatedAt.toUTCString() %>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>

