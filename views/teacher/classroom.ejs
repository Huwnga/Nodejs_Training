<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <style>
    body{
      margin-bottom: 5rem;
    }
  </style>
  <%- include('../includes/nav.ejs') %>
    </header>

    <body>
      <div class="container">

        <h1 class="display-4">
          <%= classroom.name %>
        </h1>

        <table class="table table-hover">
          <thead class="thead thead-dark" style="background-color: #acb2c7">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Username</th>
            </tr>
          </thead>
          <tbody>
            <% for(let account of classroom.accounts){ if(account.status !=0 && account.roleId==3){ %>

              <tr>
                <th scope="row">
                  <%= account.id %>
                </th>
                <td>
                  <a href="/teacher/student/<%= account.id %>">
                    <%= account.info_account.full_name %>
                  </a>
                </td>
                <td>
                  <a href="/teacher/student/<%= account.id %>">
                    <%= account.username %>
                  </a>
                </td>
              </tr>
              <% }} %>
          </tbody>
        </table>
      </div>
    </body>

    </html>