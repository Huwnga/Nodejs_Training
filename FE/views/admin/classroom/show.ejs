<%- include('../../includes/head.ejs') %>
<style>
  body {
    background-color: #f9f7f4;
  }
</style>
</head>

<%- include('../../includes/adminNav.ejs') %>
<% let classroom = data.classroom;
  let info = account.info_account;%>

<main>
  <div class="container">
    <br>
    <br>
    <h1 class="display-4">Account Details</h1>
    <br>

    <div class="container">
      <dl class="row">
        <div class="col-sm-6">
          <div class="container">
            <dt class="col-sm-3">
              <i class="bi bi-person-fill"></i>
              Classes
            </dt>
            <% for(let classroom of classes){ %>
              <dd class="col-sm-9">
                <a href="/admin/classroom/show?classroomId=<%= classroom.id %>">
                  <%= classroom.name %>
                </a>
              </dd>
            <% } %>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="container">
            <dt class="col-sm-3">
              <i class="bi bi-person-fill"></i>
              Username
            </dt>
            <dd class="col-sm-9">
              <%= account && account.username ? account.username : 'No Infomation' %>
            </dd>

            <dt class="col-sm-3">
              <i class="bi bi-person-rolodex"></i>
              Role
            </dt>
            <dd class="col-sm-9">
              <%= role && role.name ? role.name : 'No Infomation' %>
            </dd>

            <dt class="col-sm-3">
              <i class="bi bi-person-badge-fill"></i>
              Fullname
            </dt>
            <dd class="col-sm-9">
              <%= info && info.full_name ? info.full_name : 'No Infomation' %>
            </dd>

            <% let gender = info && info.gender ? info.gender : "3" %>
            <dt class="col-sm-3">
              <% switch (gender) {
              case "1": %>
              <i class="bi bi-gender-male"></i>
              <% break;
              case "2": %>
              <i class="bi bi-gender-female"></i>
              <% break;
              default: %>
              <i class="bi bi-gender-ambiguous"></i>
              <% break; 
            } %>
              Gender
            </dt>
            <dd class="col-sm-9">
              <% switch (gender) {
              case "1": %>
              <%= 'Male' %>
              <% break;
              case "2": %>
              <%= 'Female' %>
              <% break;
              default: %>
              <%= 'Other' %>
              <% break; 
            } %>
            </dd>

            <dt class="col-sm-3">
              <i class="bi bi-envelope-at-fill"></i>
              Email
            </dt>
            <dd class="col-sm-9">
              <%= account && account.username ? account.username : 'No Infomation' %>
            </dd>

            <dt class="col-sm-3">
              <i class="bi bi-telephone-fill"></i>
              Mobile
            </dt>
            <dd class="col-sm-9">
              <%= info && info.mobile ? info.mobile : 'No Infomation' %>
            </dd>

            <dt class="col-sm-3">
              <i class="bi bi-geo-alt-fill"></i>
              Address
            </dt>
            <dd class="col-sm-9">
              <%= info && info.address ? info.address : 'No Infomation' %>
            </dd>

            <dt class="col-sm-3">
              <i class="bi bi-geo-alt-fill"></i>
              Current Update
            </dt>
            <dd class="col-sm-9">
              <%= account && account.updatedAt ? account.updatedAt : 'No Infomation' %>
            </dd>
          </div>
        </div>
      </dl>
    </div>

    <a type="button" href="/admin/account" class="btn btn-info">
      &lt; Back to Index
    </a>
  </div>
</main>

<%- include('../../includes/end.ejs') %>